<resources>
    <!-- Base application theme. -->
    <style name="Theme.PlayListMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_100</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorPrimaryDark">@color/grey_400</item>
        <item name="colorOnPrimary">@color/black_500</item>
        <item name="colorAccent">@color/grey_200</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/grey_400</item>
        <item name="colorOnSecondary">@color/black_500</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorControlActivated">@color/blue_100</item>
    </style>

</resources>
