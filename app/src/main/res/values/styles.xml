<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_button_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">@dimen/small_size</item>
        <item name="android:layout_marginHorizontal">@dimen/small_size</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_500</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textFontWeight">500</item>
        <item name="cornerRadius">@dimen/small_size</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black_500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="setting_activity_text_view">
        <item name="android:layout_marginVertical">@dimen/medium_size</item>
        <item name="android:paddingHorizontal">@dimen/small_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="drawableTint">?attr/colorPrimaryDark</item>
    </style>
    <style name="day_night_switch">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingHorizontal">@dimen/small_size</item>
        <item name="android:paddingTop">@dimen/large_margin</item>
        <item name="android:paddingBottom">@dimen/medium_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:thumbTint">@color/switch_thumb_selector</item>
        <item name="android:trackTint">@color/switch_track_selector</item>
    </style>
    <style name="upper_bar_text_view">
        <item name="android:layout_gravity">start</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:paddingEnd">@dimen/small_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="search_activity_edit_text">
        <item name="android:background">@drawable/background</item>
        <item name="android:backgroundTint">?attr/colorAccent</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">?attr/colorSecondaryVariant</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black_500</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:drawablePadding">@dimen/icon_padding</item>
    </style>

    <style name="track_image_view">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginVertical">@dimen/tiny_size</item>
        <item name="android:layout_marginStart">@dimen/icon_padding</item>
    </style>

    <style name="track_name_text_view" parent="track_name_media_player">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginStart">@dimen/tiny_size</item>
        <item name="android:layout_marginTop">@dimen/icon_padding</item>
        <item name="android:layout_marginEnd">@dimen/small_size</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="track_name_media_player">
        <item name="android:layout_marginTop">@dimen/margin_after_item</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="actors_name_text_view">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginStart">@dimen/tiny_size</item>
        <item name="android:layout_marginTop">@dimen/exceptional_size</item>
        <item name="android:layout_marginBottom">@dimen/icon_padding</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="point_text_view">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginStart">@dimen/point_size</item>
        <item name="android:layout_marginTop">@dimen/exceptional_size</item>
        <item name="android:layout_marginBottom">@dimen/icon_padding</item>
    </style>

    <style name="track_duration_text_view" parent="actors_name_text_view">
        <item name="android:layout_marginStart">@dimen/point_size</item>
    </style>

    <style name="track_arrow_image_view">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginTop">@dimen/medium_size</item>
        <item name="android:layout_marginEnd">@dimen/medium_size</item>
        <item name="android:layout_marginBottom">@dimen/medium_size</item>
        <item name="tint">?attr/colorPrimaryDark</item>
    </style>

    <style name="placeholder_text_view">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/placeholder_notice_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="placeholder_Button" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="cornerRadius">@dimen/placeholder_button_radius</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="actors_name_media_player" parent="track_name_media_player">
        <item name="android:layout_marginTop">@dimen/icon_padding</item>
        <item name="android:textSize">@dimen/sp14_text_size</item>
    </style>

    <style name="track_time_progress_in_player" parent="track_name_media_player">
        <item name="android:layout_marginTop">@dimen/icon_padding</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/sp14_text_size</item>
    </style>

    <style name="first_track_info_in_player">
        <item name="android:layout_marginTop">@dimen/large_margin</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/grey_400</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="other_track_info_in_player">
        <item name="android:layout_marginTop">@dimen/small_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/grey_400</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="playing_track_info_style">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="mediaTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_marginStart">@dimen/small_size</item>
        <item name="android:layout_marginEnd">@dimen/small_size</item>
        <item name="android:background">?attr/colorSecondary</item>
        <item name="tabRippleColor">?attr/colorOnPrimary</item>
        <item name="tabIndicatorColor">?attr/colorOnPrimary</item>
        <item name="tabTextAppearance">@style/mediaTabTextAppearance</item>
    </style>

    <style name="mediaTabTextAppearance">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="navigationBottomBarStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="PlaylistListTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin_after_item</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/placeholder_notice_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="RoundedButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_after_item</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="cornerRadius">36dp</item>
    </style>

    <style name="NewPlaylistStyle" parent="RoundedButtonStyle">
        <item name="android:layout_gravity">center</item>
        <item name="maxHeight">36dp</item>
    </style>

    <style name="TrackItemLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/tiny_size</item>
    </style>

    <style name="PlaylistListItemImageView">
        <item name="android:layout_width">@dimen/track_image_size</item>
        <item name="android:layout_height">@dimen/track_image_size</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">@dimen/point_size</item>
        <item name="android:layout_marginEnd">@dimen/tiny_size</item>
    </style>

    <style name="PlaylistListItemTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="PlaylistListItemNameTextStyle" parent="PlaylistListItemTextStyle">
        <item name="android:layout_marginTop">@dimen/point_size</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="PlaylistListItemTrackCountTextStyle" parent="PlaylistListItemTextStyle">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="PlaylistGridItemImageView">
        <item name="android:background">@null</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="layout_constraintHorizontal_bias">0.5</item>
    </style>

    <style name="PlaylistGridItemTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="BackImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/dp56_margin</item>
        <item name="android:layout_height">@dimen/dp56_margin</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:src">@drawable/arrow_back</item>
    </style>

    <style name="PlayListImageView">
        <item name="android:layout_width">@dimen/null_size</item>
        <item name="android:layout_height">@dimen/null_size</item>
        <item name="android:layout_marginTop">@dimen/margin_after_item</item>
        <item name="android:layout_marginHorizontal">@dimen/tiny_size</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="layout_constraintHorizontal_bias">0.5</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorControlActivated">@color/blue_100</item>
    </style>

    <style name="PlaylistTextAppearance">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="playlistNameStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">@dimen/null_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp32_margin</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="hintTextColor">?attr/colorOnPrimary</item>
        <item name="boxStrokeColor">@color/et_playlist_name_empty_selector</item>
    </style>

    <style name="playlistDescriptionStyle" parent="playlistNameStyle">
        <item name="android:layout_marginTop">@dimen/small_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="CreatePlaylistButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/dp32_margin</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium_text_size</item>tiny_size
        <item name="cornerRadius">@dimen/tiny_size</item>
    </style>

</resources>
